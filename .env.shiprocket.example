# Shiprocket Configuration
# Copy these variables to your .env file and update with your credentials

# Required - Shiprocket Authentication
SHIPROCKET_EMAIL=your-shiprocket-email@example.com
SHIPROCKET_PASSWORD=your-shiprocket-password

# API Configuration
SHIPROCKET_BASE_URL=https://apiv2.shiprocket.in/v1/external
SHIPROCKET_TIMEOUT=30

# Token Management
SHIPROCKET_TOKEN_CACHE_DURATION=3600

# Business Rules
SHIPROCKET_RETURN_WINDOW_DAYS=7
SHIPROCKET_DEFAULT_WEIGHT=0.5
SHIPROCKET_DEFAULT_LENGTH=10
SHIPROCKET_DEFAULT_BREADTH=10
SHIPROCKET_DEFAULT_HEIGHT=10

# Automation Settings
SHIPROCKET_AUTO_ASSIGN_COURIER=false
SHIPROCKET_PREFER_CHEAPEST=true
SHIPROCKET_MAX_COURIER_RATE=
SHIPROCKET_MAX_DELIVERY_DAYS=

# Logging and Monitoring
SHIPROCKET_LOG_REQUESTS=true
SHIPROCKET_RATE_LIMIT=60

# Webhooks (Optional)
SHIPROCKET_WEBHOOK_SECRET=
SHIPROCKET_WEBHOOK_URL=

# Default Pickup Location (if you have a primary location)
APP_DEFAULT_PICKUP_LOCATION=Delhi